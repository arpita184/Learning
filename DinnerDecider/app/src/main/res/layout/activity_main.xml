<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:text="Chinese"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/selectedFoodTxt"
            android:fontFamily="@font/muli_bold" android:textSize="30sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/imageView" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="DECIDE!"
            android:layout_height="wrap_content"
            android:id="@+id/decideBtn" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:fontFamily="@font/muli_bold"
            android:textSize="18sp" android:textColor="@android:color/background_light"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addFoodTxt"
            android:hint="Add new food!" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/addFoodBtn"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
            android:fontFamily="@font/muli_bold"/>
    <Button
            android:text="ADD FOOD"
            android:layout_width="230dp"
            android:layout_height="34dp"
            android:id="@+id/addFoodBtn" android:fontFamily="@font/muli_bold"
            android:textSize="14sp"
            android:textColor="@android:color/background_light"
            android:background="@color/colorPrimary" style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/decideBtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>