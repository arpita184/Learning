<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView7" app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintDimensionRatio="1:1" android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/imageView6" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView9"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView7" app:layout_constraintDimensionRatio="1:1"
            android:scaleType="centerCrop" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/banner"
            android:scaleType="centerCrop" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            android:layout_marginTop="116dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Devslopes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/devslopes" android:textSize="24sp"
            android:fontFamily="sans-serif" android:typeface="normal" android:textStyle="bold"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/banner"
            app:layout_constraintStart_toEndOf="@+id/logo" android:layout_marginStart="24dp"
    />
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"/>
    <ImageView
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView5" android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp" app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            app:layout_constraintStart_toEndOf="@+id/imageView4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4" app:layout_constraintVertical_bias="1.0"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical" app:layout_constraintGuide_end="192dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintVertical_bias="1.0" android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/imageView8" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintBottom_toTopOf="@+id/imageView9" app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintDimensionRatio="1:1" android:scaleType="centerCrop" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" android:layout_marginBottom="8dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="horizontal"/>
</android.support.constraint.ConstraintLayout>